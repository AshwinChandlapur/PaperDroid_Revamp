<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:clickable="true"
    tools:context="vadeworks.news.paperdroids.MainScreen.MainScreen_Activity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:fitsSystemWindows="true"
        app:layout_behavior="vadeworks.news.paperdroids.FixAppBarLayoutBehavior"
        android:background="@color/background_white">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleTextAppearance="@null"
            android:fitsSystemWindows="true">
            <ImageView
                app:layout_collapseMode="parallax"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="fitXY"
                android:id="@+id/imageView"
                android:src="@drawable/main_screen_image_one"
                android:layout_gravity="center"
                tools:ignore="ContentDescription" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="12dp"
                android:layout_gravity="top|center">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/logo_big_one"
                    android:layout_gravity="center|top"
                    tools:ignore="ContentDescription" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                android:fontFamily="cursive"/>

            </LinearLayout>


            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin">
            </android.support.v7.widget.Toolbar>


        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:id="@+id/scrollView"
        android:layout_margin="10dp"
        android:background="@color/background_white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/background_white">






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/background_white">

                <android.support.v7.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="140dp"
                    app:cardBackgroundColor="@color/background_white"
                    android:layout_margin="16dp"
                    app:cardElevation="2dp"
                    android:id="@+id/prajavani"
                    app:cardCornerRadius="7dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_margin="10dp">



                        <ImageView
                            android:layout_width="84dp"
                            android:layout_height="84dp"
                            android:src="@drawable/pj_small"
                            android:layout_gravity="center"
                            android:background="@color/background_white"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="@string/toolbar_title_home_pj"
                            android:layout_gravity="bottom|center"
                            />


                    </LinearLayout>


                </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="140dp"
                    app:cardBackgroundColor="@color/background_white"
                    android:layout_margin="16dp"
                    app:cardElevation="2dp"
                    android:id="@+id/vijayavani"
                    app:cardCornerRadius="7dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_margin="10dp">



                        <ImageView
                            android:layout_width="84dp"
                            android:layout_height="84dp"
                            android:src="@drawable/vv_small"
                            android:layout_gravity="center"
                            android:background="@color/background_white"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="@string/toolbar_title_home_vv"
                            android:layout_gravity="bottom|center"
                            />


                    </LinearLayout>


                </android.support.v7.widget.CardView>




            </LinearLayout>








            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/background_white">

                <android.support.v7.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="140dp"
                    app:cardBackgroundColor="@color/background_white"
                    android:layout_margin="16dp"
                    android:id="@+id/vijayakarnataka"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="7dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_margin="10dp">



                        <ImageView
                            android:layout_width="84dp"
                            android:layout_height="84dp"
                            android:src="@drawable/vk_small"
                            android:layout_gravity="center"
                            android:background="@color/background_white"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="@string/toolbar_title_home_vk"
                            android:layout_gravity="bottom|center"
                            />


                    </LinearLayout>


                </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="140dp"
                    app:cardBackgroundColor="@color/background_white"
                    android:layout_margin="16dp"
                    app:cardElevation="2dp"
                    android:id="@+id/udayavani"
                    app:cardCornerRadius="7dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_margin="10dp">



                        <ImageView
                            android:layout_width="84dp"
                            android:layout_height="84dp"
                            android:src="@drawable/uv_small"
                            android:layout_gravity="center"
                            android:background="@color/background_white"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="@string/toolbar_title_home_uv"
                            android:layout_gravity="bottom|center"
                            />


                    </LinearLayout>


                </android.support.v7.widget.CardView>




            </LinearLayout>








            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/background_white">

                <android.support.v7.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="140dp"
                    app:cardBackgroundColor="@color/background_white"
                    android:layout_margin="16dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:focusable="false"
                    android:id="@+id/suvarna"
                    app:cardCornerRadius="7dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_margin="10dp">



                        <ImageView
                            android:layout_width="84dp"
                            android:layout_height="84dp"
                            android:src="@drawable/an_small"
                            android:layout_gravity="center"
                            android:background="@color/background_white"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="@string/toolbar_title_home_an"
                            android:layout_gravity="bottom|center"
                            />


                    </LinearLayout>


                </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="140dp"
                    app:cardBackgroundColor="@color/background_white"
                    android:layout_margin="16dp"
                    app:cardElevation="2dp"
                    android:id="@+id/esanje"
                    app:cardCornerRadius="7dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_margin="10dp">



                        <ImageView
                            android:layout_width="84dp"
                            android:layout_height="84dp"
                            android:src="@drawable/es_small"
                            android:layout_gravity="center"
                            android:background="@color/background_white"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="@string/toolbar_title_home_es"
                            android:layout_gravity="bottom|center"
                            />


                    </LinearLayout>


                </android.support.v7.widget.CardView>






            </LinearLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bottomimage"
                android:src="@drawable/bottomimg"
                android:adjustViewBounds="true"
                tools:ignore="ContentDescription" />
            
        </LinearLayout>

































    </android.support.v4.widget.NestedScrollView>


</android.support.design.widget.CoordinatorLayout>