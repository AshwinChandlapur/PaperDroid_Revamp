<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainscreen_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    android:clickable="true"
    tools:context="vadeworks.news.paperdroids.MainScreen.MainScreen_Activity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/background_white"
        android:fitsSystemWindows="true"
        app:layout_behavior="vadeworks.news.paperdroids.FixAppBarLayoutBehavior">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleTextAppearance="@null"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fitsSystemWindows="true"
                android:scaleType="fitXY"
                android:src="@drawable/main_screen_image_one"
                app:layout_collapseMode="parallax"
                tools:ignore="ContentDescription" />


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_gravity="center|top"
                        android:src="@drawable/logo_main_screen"
                        tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="cursive"
                    android:gravity="center"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />



            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"></android.support.v7.widget.Toolbar>


        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@color/background_white"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_white"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:id="@+id/specialCards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:transitionName="cardSpecial"
                android:visibility="gone"
                app:cardBackgroundColor="@color/background_white"
                app:cardCornerRadius="7dp"
                app:cardElevation="2dp">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/cricketImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cricback" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.6"
                        android:background="@color/text_black_100" />


                    <com.udevel.widgetlab.TypingIndicatorView
                        android:id="@+id/loader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="4dp"
                        app:animateFrequency="300"
                        app:animationOrder="lastOneFirst"
                        app:backgroundColor="@android:color/transparent"
                        app:backgroundType="rounded"
                        app:dotAnimationDuration="600"
                        app:dotAnimationType="Sliding"
                        app:dotColor="@color/background_white"
                        app:dotCount="6"
                        app:dotHorizontalSpacing="4dp"
                        app:dotMaxCompressRatio="70%"
                        app:dotSecondColor="#6ba4a4a4"
                        app:dotSize="10dp"
                        app:showBackground="true" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mchDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/background_white"
                        android:textSize="20sp" />


                    <ImageView
                        android:id="@+id/battingTeamImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />

                    <TextView
                        android:id="@+id/battingTeamText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/background_white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/scoreCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/background_white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/mchStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/background_white"
                        android:textSize="16sp" />
                </LinearLayout>


            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:id="@+id/quickie"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/background_white"
                app:cardCornerRadius="7dp"
                app:cardElevation="4dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quick News"
                    android:layout_gravity="top"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"/>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="7dp"
                        android:id="@+id/quick_english"
                        android:layout_gravity="start|center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:innerRadius="0dp"
                            android:shape="ring"
                            app:cardElevation="3dp"
                            android:layout_margin="5dp"
                            app:cardBackgroundColor="#FFC455"
                            app:cardCornerRadius="40dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="A"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textColor="@color/background_white"
                                android:textSize="50sp"/>

                        </android.support.v7.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Headlines"
                            android:layout_gravity="center"
                            android:gravity="center"/>



                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/quick_kannada"
                        android:layout_marginTop="7dp"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <android.support.v7.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:innerRadius="0dp"
                            android:layout_margin="5dp"
                            android:shape="ring"
                            app:cardElevation="3dp"
                            app:cardBackgroundColor="#FFE6BD"
                            app:cardCornerRadius="40dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ಅ"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textColor="@color/background_white"
                                android:textSize="50sp"/>

                        </android.support.v7.widget.CardView>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ಮುಖ್ಯಾಂಶಗಳು"
                            android:layout_gravity="center"
                            android:gravity="center"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/quick_hindi"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="7dp"
                        android:layout_gravity="end|center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:innerRadius="0dp"
                            android:layout_margin="5dp"
                            android:shape="ring"
                            app:cardElevation="3dp"
                            app:cardBackgroundColor="#FFC455"
                            app:cardCornerRadius="40dp"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="अ"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textColor="@color/background_white"
                                android:textSize="50sp"/>
                        </android.support.v7.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="शीर्षक"
                            android:layout_gravity="center"
                            android:gravity="center"/>


                    </LinearLayout>


            </android.support.v7.widget.CardView>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/background_white"
                android:gravity="center"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:id="@+id/hindustantimes"
                    android:layout_width="150dp"
                    android:layout_height="140dp"
                    android:layout_margin="16dp"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/background_white"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="84dp"
                            android:layout_height="84dp"
                            android:layout_gravity="center"
                            android:background="@color/background_white"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ht_new"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_gravity="bottom|center"
                            android:text="@string/toolbar_title_home_ht" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/dna"
                    android:layout_width="150dp"
                    android:layout_height="140dp"
                    android:layout_margin="16dp"
                    app:cardBackgroundColor="@color/background_white"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="84dp"
                            android:layout_height="84dp"
                            android:layout_gravity="center"
                            android:background="@color/background_white"
                            android:scaleType="fitCenter"
                            android:src="@drawable/dna_new"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:layout_marginTop="3dp"
                            android:text="@string/toolbar_title_home_dna" />


                    </LinearLayout>

                </android.support.v7.widget.CardView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/background_white"
                android:gravity="center"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:id="@+id/indianExpress"
                    android:layout_width="150dp"
                    android:layout_height="140dp"
                    android:layout_margin="16dp"
                    android:clickable="true"
                    android:focusable="false"
                    app:cardBackgroundColor="@color/background_white"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="84dp"
                            android:layout_height="84dp"
                            android:layout_gravity="center"
                            android:background="@color/background_white"
                            android:src="@drawable/ie_new"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:layout_marginTop="3dp"
                            android:text="@string/toolbar_title_home_ie" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/deccanherald"
                    android:layout_width="150dp"
                    android:layout_height="140dp"
                    android:layout_margin="16dp"
                    android:clickable="true"
                    android:focusable="false"
                    app:cardBackgroundColor="@color/background_white"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="84dp"
                            android:layout_height="84dp"
                            android:layout_gravity="center"
                            android:background="@color/background_white"
                            android:src="@drawable/dh_new"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:layout_marginTop="3dp"
                            android:text="@string/toolbar_title_home_dh" />


                    </LinearLayout>


                </android.support.v7.widget.CardView>


            </LinearLayout>


            <android.support.v7.widget.CardView
                android:id="@+id/overviewcard"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/background_white"
                app:cardCornerRadius="7dp"
                app:cardElevation="4dp">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/exclusive_background"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />


                    <FrameLayout
                        android:id="@+id/locklayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="0.7"
                            android:background="@color/text_black_100" />

                            <TextView
                                android:id="@+id/locktext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:gravity="center"
                                android:drawableTint="@color/background_white"
                                android:drawableTop="@drawable/ic_lock_black_24dp"
                                android:textColor="@color/background_white"
                                android:textSize="12sp" />
                    </FrameLayout>


                </FrameLayout>
            </android.support.v7.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/background_white"
                android:gravity="center"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:id="@+id/prajavani"
                    android:layout_width="150dp"
                    android:layout_height="140dp"
                    android:layout_margin="16dp"
                    app:cardBackgroundColor="@color/background_white"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="84dp"
                            android:layout_height="84dp"
                            android:layout_gravity="center"
                            android:background="@color/background_white"
                            android:src="@drawable/pj_small"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:layout_marginTop="3dp"
                            android:text="@string/toolbar_title_home_pj" />


                    </LinearLayout>


                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/vijayavani"
                    android:layout_width="150dp"
                    android:layout_height="140dp"
                    android:layout_margin="16dp"
                    app:cardBackgroundColor="@color/background_white"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="84dp"
                            android:layout_height="84dp"
                            android:layout_gravity="center"
                            android:background="@color/background_white"
                            android:src="@drawable/vv_small"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:layout_marginTop="3dp"
                            android:text="@string/toolbar_title_home_vv" />


                    </LinearLayout>


                </android.support.v7.widget.CardView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/background_white"
                android:gravity="center"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:id="@+id/vijayakarnataka"
                    android:layout_width="150dp"
                    android:layout_height="140dp"
                    android:layout_margin="16dp"
                    app:cardBackgroundColor="@color/background_white"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="84dp"
                            android:layout_height="84dp"
                            android:layout_gravity="center"
                            android:background="@color/background_white"
                            android:src="@drawable/vk_small"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:layout_marginTop="3dp"
                            android:text="@string/toolbar_title_home_vk" />


                    </LinearLayout>


                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/esanje"
                    android:layout_width="150dp"
                    android:layout_height="140dp"
                    android:layout_margin="16dp"
                    app:cardBackgroundColor="@color/background_white"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="84dp"
                            android:layout_height="84dp"
                            android:layout_gravity="center"
                            android:background="@color/background_white"
                            android:src="@drawable/es_small"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:layout_marginTop="3dp"
                            android:text="@string/toolbar_title_home_es" />


                    </LinearLayout>


                </android.support.v7.widget.CardView>


            </LinearLayout>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/background_white"
                app:cardCornerRadius="7dp"
                app:cardElevation="2dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="3dp"
                        android:gravity="center"
                        android:text="Today's Overview"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                    <android.support.v7.widget.CardView
                        android:id="@+id/today_horoscope"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="8dp"
                        app:cardBackgroundColor="@color/background_white"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="2dp">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:id="@+id/today_horoscope_text"
                            android:text="Horoscopes"
                            android:layout_gravity="center"
                            android:gravity="center" />

                    </android.support.v7.widget.CardView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:layout_marginBottom="15dp"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">



                            <TextView
                                android:id="@+id/petrol"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableTop="@drawable/smallgasstationone"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/defaultDash" />

                            <TextView
                                android:id="@+id/diesel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/defaultDash" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/gold22"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableTop="@drawable/smallgold"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/defaultDash" />

                            <TextView
                                android:id="@+id/gold24"
